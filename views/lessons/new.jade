extends ../layout

block content
  .container
    .row
      form.col.s12
        .row
          .input-field.col.s12
            input(type='text', id='title')
            label(for='title') Lesson Title
    
    //- This is where the questions will be inserted
    .questions
      //- This .row will be hidden and cloned to add questions
      .row.question-template
        .col.s12
          .card
            .card-content
              .card-title Question Title
              p Some text stuff
            .card-action
              a(href='#') Remove
      
    
    //- Input form for new questions
    .row
      .col.s12
        .card
          .card-content
            .row
              form.col.s12
                .row
                  .input-field.col.s12
                    input(type='text', id='question-title')
                    label(for='question-title') Question Title
                .row
                  .input-field.col.s12
                    textarea.materialize-textarea(id='question-text')
                    label(for='question-text') Question Text
          .card-action
            a#add-question(href='#') Add
            
  .bottom-right.fixed-action-btn
    a.btn-floating.btn-large.waves-effect.waves-light.pink.accent-2(href='#')
      i.material-icons save
      
  script(src='/javascripts/lessons/new.js')